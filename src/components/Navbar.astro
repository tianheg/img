---
const hrefHome = "/";
const hrefInternet = "/internet/";
const currentPath = Astro.url.pathname;
---

<div class="navbar justify-around">
	<ul class="menu menu-horizontal join">
		<li>
			<a
				href={hrefHome}
				class=`btn btn-primary join-item ${currentPath != hrefHome && "btn-outline"}`
				>Home</a
			>
		</li>
		<li>
			<a
				href={hrefInternet}
				class=`btn btn-primary join-item ${currentPath != hrefInternet && "btn-outline"}`
				>Internet</a
			>
		</li>
	</ul>
</div>
